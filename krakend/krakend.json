{
	"version": 2,
	"endpoints": [
		{
			"endpoint": "/",
			"backend": [
				{
					"host": ["http://backend1"],
					"url_pattern": "/index.php"
				}
			]
		},
		{
			"endpoint": "/login-krakend",
			"method": "POST",
			"backend": [
				{
					"host": ["http://backend1"],
					"url_pattern": "/token_issuer.php"
				}
			],
			"extra_config": {
				"github.com/devopsfaith/krakend-jose/signer": {
					"alg": "HS256",
					"kid": "sim2",
					"keys-to-sign": ["token","token2.access_token"],
					"jwk_local_path": "./jwk.json",
					"disable_jwk_security": true
				}
			}
		},
		{
			"endpoint": "/login-service",
			"method": "POST",
			"querystring_params": ["token"],
			"backend": [
				{
					"host": ["http://backend2"],
					"url_pattern": "/login.php"
				}
			]
		},
		{
			"endpoint": "/jwt",
			"headers_to_pass": ["Authorization"],
			"output_encoding": "no-op",
			"backend": [
				{
					"host": ["http://backend2"],
					"url_pattern": "/jwt.php",
					"encoding": "no-op"
				}
			]
		},
		{
			"endpoint": "/krakend-secured",
			"output_encoding": "no-op",
			"backend": [
				{
					"host": ["http://backend1"],
					"url_pattern": "/secured.php",
					"encoding": "no-op"
				}
			],
			"extra_config": {
				"github.com/devopsfaith/krakend-jose/validator": {
					"alg": "HS256",
					"jwk_local_path": "./jwk.json",
					"disable_jwk_security": true
				}
			}
		}
	]
}